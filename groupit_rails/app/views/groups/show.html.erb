<style>
body{
padding-top:80px;
padding-bottom:3%;
}
#messages_table {
	padding-top:1%;
	overflow-x: hidden;
}

@media screen and (max-height:710px) and (min-height:620px){
#messages_table{
	height: 60vh;
}
}

@media screen and (max-height:620px) and (min-height:520px){
#messages_table{
	height: 52vh;
}
}

@media screen and (max-height:520px){
#messages_table{
	height: 45vh;
}
}
#main {
	width:90%;
	left:5%;
	position:relative;
}
/*
