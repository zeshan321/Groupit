<script>
$(document).ready(function(){
		$("#password").hide();
    $("#public").click(function(){
        $("#password").hide();
    });
    $("#private").click(function(){
        $("#password").show();
    });
});
</script>
<h2>Create Group</h2>
<%= form_for @group do |f| %>
	<% if @group.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@group.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
	
	<p> Public Private 
		<%= radio_button_tag(:group_type, "Public",true) %>
		<%= label_tag(:group_type, "Public") %>
		
  	<%= radio_button_tag(:group_type, "Private") %>
		<%= label_tag(:group_type, "Private") %>
	</p>

	<p id="password">
		<%= f.label :password %>
    <%= f.text_field :password %>
	</p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
