<style>
hr{
background-color: #eee;
border: 0 none;
height: 2px;
}
a.button:hover{
text-decoration:none;
}
</style>
<center>
<h2 style="padding:10px">All Groups</h2>
<div class="row">
<div style="display:inline-block;margin-right:2%">
<a class="button" href="/groups/new">
<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Create Group</button>
</a>
</div>
<!--
<a class="button" href="/groups/join">
<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>&nbsp;&nbsp;Search Group</button>
</a>
-->
<div style="display:inline-block;">
<form class="form-inline float-right" role="form">
<div class="input-group">
<input type="text" class="form-control" placeholder="Search groups...">
<span class="input-group-btn">
  <button class="btn btn-default" type="button">Go!</button>
</span>
</div>
</form>
</div>
</div>
<hr/>
<table>
 <tr>
    <th style="padding-right:180px;padding-bottom:15px;padding-top:5px;">Group</th>
    <th style="padding-top:5px;padding-bottom:15px;">Type</th>
  </tr>

  <% @groups.each do |group| %>
    <tr>
      <td style="padding:3px;"><%= link_to group.name, group_path(group) %></td>
      <td style="padding:3px;"><%= group.public_group ? "Public" : "Private" %></td>
    </tr>
  <% end %>

</table>
</center>
