<!DOCTYPE html>
<html>
<head>
  <title>GroupitRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header style="text-align:right; background-color:#16a085;">
<nav style="display: inline-block; padding: 10px;">
<% if user_signed_in? %>
	<%= link_to current_user.name, edit_user_registration_path %>
	<%= link_to "Logout", destroy_user_session_path, method: "delete" %>
<% else %>
	<%= link_to "Sign up",new_user_registration_path,method: "get" %>
	<%= link_to "Login",new_user_session_path,method: "get" %>
<% end %>
</nav>
</header>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
